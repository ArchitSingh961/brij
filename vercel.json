{
    "version": 2,
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "npm install && cd server && npm install && cd ../client && npm install",
    "functions": {
        "server/src/index.js": {
            "includeFiles": "server/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/src/index.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "/server/src/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}