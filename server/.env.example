# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database - MongoDB connection string
# For local: mongodb://localhost:27017/brij-namkeen
# For Atlas: mongodb+srv://user:pass@cluster.mongodb.net/brij-namkeen
MONGODB_URI=mongodb://localhost:27017/brij-namkeen

# JWT Secret - Generate a secure random string (min 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# Razorpay Payment Gateway
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Email Configuration (Yahoo Mail with App Password)
# Create App Password: https://login.yahoo.com/account/security -> Generate app password
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=465
SMTP_USER=your-email@yahoo.com
SMTP_PASS=your-app-password
OWNER_EMAIL=owner@brijnamkeen.com

# Admin Credentials (Change these!)
ADMIN_EMAIL=admin@brijnamkeen.com
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
